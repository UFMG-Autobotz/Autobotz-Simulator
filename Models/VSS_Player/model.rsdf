<?xml version='1.0'?>

<%
  # SI units (length in meters)

  pi = 1.570796

  # CHASSI
  # Geometry
  chassi_x = 0.08
  chassi_y = 0.08
  chassi_z = 0.08
  chassi_dz = 0.01

  # Tag thickness (as a percentage of the chassi height)
  chassi_th = 0.005

  # Inertia
  chassi_density = 700
  chassi_mass = chassi_density * chassi_x * chassi_y * (chassi_z-chassi_dz)
  chassi_ixx  = (chassi_mass/12.0) * (chassi_y**2 + (chassi_z-chassi_dz)**2)
  chassi_iyy  = (chassi_mass/12.0) * ((chassi_z-chassi_dz)**2 + chassi_x**2)
  chassi_izz  = (chassi_mass/12.0) * (chassi_x**2 + chassi_y**2)

  #WHEELS
  # Geometry
  wheel_radius = 0.016
  wheel_length = 0.01

  # Position
  wheel_dx = -0.0155
  wheel_dy = 0.033

  # Inertia
  wheel_density = 1000
  wheel_mass = wheel_density * pi * wheel_radius**2 * wheel_length
  wheel_ixx  = (wheel_mass/12.0) * (3*wheel_radius**2 + wheel_length**2)
  wheel_iyy  = (wheel_mass/12.0) * (3*wheel_radius**2 + wheel_length**2)
  wheel_izz  = (wheel_mass/2.0) * wheel_radius**2

  # Surface
  wheel_mu = 50

  #BALL WHEEL
  # Geometry
  ball_radius = chassi_dz

  # Position
  ball_dx = 0.02

  # Inertia
  ball_density = 1000
  ball_mass = ball_density * pi * ball_radius**3 * 4/3.0
  ball_ixx  = (ball_mass/5.0) * 2*ball_radius**2
  ball_iyy  = (ball_mass/5.0) * 2*ball_radius**2
  ball_izz  = (ball_mass/5.0) * 2*ball_radius**2

  # Surface
  ball_mu = 1
%>

<sdf version ='1.6'>

  <model name ='player'>

    <pose>0 0 0 0 0 0</pose>

    <link name ='chassi'>
      <pose>0 0 <%= chassi_dz %> 0 0 0</pose>
      <inertial>
        <pose>0 0 <%= 0.5*(chassi_z - chassi_dz)  %> 0 0 0</pose>
        <mass> <%= chassi_mass %></mass>
        <inertia>
          <ixx><%= chassi_ixx %></ixx>
          <ixy>0.000000</ixy>
          <ixz>0.000000</ixz>
          <iyy><%= chassi_iyy %></iyy>
          <iyz>0.000000</iyz>
          <izz><%= chassi_izz %></izz>
        </inertia>
      </inertial>

      <collision name ='chassi_collision'>
        <pose>0 0 <%= 0.5*(chassi_z - chassi_dz)  %> 0 0 0</pose>
        <geometry>
          <box><size><%= chassi_x %> <%= chassi_y %> <%= chassi_z - chassi_dz %></size></box>
        </geometry>
      </collision>

      <visual name ='chassi_body_visual'>
        <pose>0 0 <%= 0.5*(chassi_z - chassi_dz)*(1 - chassi_th)  %> 0 0 0</pose>
        <geometry>
          <box><size><%= chassi_x %> <%= chassi_y %> <%= (1-chassi_th)*(chassi_z - chassi_dz) %></size></box>
        </geometry>
      </visual>

      <visual name ='chassi_tag_visual'>
        <pose>0 0 <%= (chassi_z - chassi_dz)*(1 - 0.5*chassi_th) %> 0 0 0</pose>
        <geometry>
          <box><size><%= chassi_x %> <%= chassi_y %> <%= chassi_th*(chassi_z - chassi_dz) %></size></box>
        </geometry>

        <material>
          <script>
            <uri>file://Scripts</uri>
            <uri>file://Textures</uri>
            <name>VSS_Player/tag</name>
          </script>
        </material>
      </visual>
    </link>

    <link name ='left_wheel'>
      <pose><%= wheel_dx %> <%= wheel_dy %> <%= wheel_radius %> <%= pi %> 0 0</pose>
      <inertial>
        <mass> <%= wheel_mass %></mass>
        <inertia>
          <ixx><%= wheel_ixx %></ixx>
          <ixy>0.000000</ixy>
          <ixz>0.000000</ixz>
          <iyy><%= wheel_iyy %></iyy>
          <iyz>0.000000</iyz>
          <izz><%= wheel_izz %></izz>
        </inertia>
      </inertial>

      <collision name ='left_wheel_collision'>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_length %></length>
          </cylinder>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu><%= wheel_mu %></mu>
              <mu2><%= wheel_mu %></mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name ='left_wheel_visual'>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_length %></length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name ='right_wheel'>
      <pose><%= wheel_dx %> <%= -wheel_dy %> <%= wheel_radius %> <%= pi %> 0 0</pose>
      <inertial>
        <mass> <%= wheel_mass %></mass>
        <inertia>
          <ixx><%= wheel_ixx %></ixx>
          <ixy>0.000000</ixy>
          <ixz>0.000000</ixz>
          <iyy><%= wheel_iyy %></iyy>
          <iyz>0.000000</iyz>
          <izz><%= wheel_izz %></izz>
        </inertia>
      </inertial>

      <collision name ='right_wheel_collision'>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_length %></length>
          </cylinder>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu><%= wheel_mu %></mu>
              <mu2><%= wheel_mu %></mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name ='right_wheel_visual'>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_length %></length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name ='ball_wheel'>
      <pose><%= ball_dx %> 0 <%= ball_radius %> 0 0 0</pose>
      <inertial>
        <mass> <%= ball_mass %></mass>
        <inertia>
          <ixx><%= ball_ixx %></ixx>
          <ixy>0.000000</ixy>
          <ixz>0.000000</ixz>
          <iyy><%= ball_iyy %></iyy>
          <iyz>0.000000</iyz>
          <izz><%= ball_izz %></izz>
        </inertia>
      </inertial>

      <collision name ='ball_wheel_collision'>
        <geometry>
          <sphere><radius><%= ball_radius %></radius></sphere>
        </geometry>

        <surface>
          <friction>
            <ode>
              <mu><%= ball_mu %></mu>
              <mu2><%= ball_mu %></mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name ='ball_wheel_visual'>
        <geometry>
          <sphere><radius><%= ball_radius %></radius></sphere>
        </geometry>
      </visual>
    </link>

    <joint name="chassi_left_wheel" type="revolute">
      <parent>chassi</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 0 -1</xyz>
      </axis>

    </joint>

    <joint name="chassi_right_wheel" type="revolute">
      <parent>chassi</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 0 -1</xyz>
      </axis>
    </joint>

    <joint name="chassi_ball_wheel" type="ball">
      <parent>chassi</parent>
      <child>ball_wheel</child>
    </joint>

  </model>

</sdf>
