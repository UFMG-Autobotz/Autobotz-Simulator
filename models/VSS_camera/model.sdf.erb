<%
  lib = '../../lib/models/' # path to simple shape ruby objects
  require_relative lib + 'box'
  camera = Box.new

  # Geometry
  camera.x = camera.y = camera.z = 0.1

  # Inertia
  camera.mass = 0.1
%>


<?xml version="1.0" ?>

<sdf version="1.6">

  <model name="VSS_camera">

    <pose>0 0 <%= camera.z/2 %> 0 0 0</pose>

    <link name="link">

      <inertial>
        <mass><%= camera.mass %></mass>
        <inertia>
          <ixx><%= camera.ixx %></ixx>
          <iyy><%= camera.iyy %></iyy>
          <izz><%= camera.izz %></izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <box>
            <size><%= camera.x %><%= camera.y %><%= camera.z %></size>
          </box>
        </geometry>
      </collision>

      <visual name="visual">
        <geometry>
          <box>
            <size><%= camera.x %><%= camera.y %><%= camera.z %></size>
          </box>
        </geometry>
        <material>
          <ambient>0.5088 1 0.0468 1</ambient>
          <diffuse>0.5088 1 0.0468 1</diffuse>
          <specular> 0.5 0.5 0.5 128</specular>
        </material>
      </visual>

      <sensor name="camera" type="camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>752</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
        <plugin name='camera_plugin' filename='lib_camera_ros_plugin.so'></plugin>
      </sensor>

    </link>

  </model>

</sdf>
